<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.java_final_project_javafx.MainController">
    <left>
        <VBox spacing="10.0">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Label text="Countdown Timer"/>
            <Label fx:id="timerLabel" text="25:00" style="-fx-font-size: 30px;"/>
            <TextField fx:id="taskField" promptText="Enter main task"/>
            <HBox spacing="10.0">
                <TextField fx:id="durationField" promptText="Duration (minutes)" />
                <Button text="Start" onAction="#startTimer"/>
            </HBox>
        </VBox>
    </left>
    <center>
        <VBox spacing="10.0">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Label text="Tasks"/>
            <ListView fx:id="taskListView"/>
            <HBox spacing="10.0">
                <Button text="Add Task" onAction="#showAddTaskDialog"/>
                <Button text="Edit Task" onAction="#showEditTaskDialog"/>
                <Button text="Delete Task" onAction="#deleteTask"/>
                <Button text="View Task" onAction="#viewTaskDetails"/>
            </HBox>
        </VBox>
    </center>
    <right>
        <VBox spacing="10.0">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Label text="Workflow"/>
            <ListView fx:id="workflowListView"/>
        </VBox>
    </right>
</BorderPane>
